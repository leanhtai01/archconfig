battery all {
        format = "Battery: %status %percentage %remaining"
        status_chr = "⚡ Charging"
        status_bat = "Discharging"
        status_unk = "? Unknown"
        status_full = "☻ FULL"
        low_threshold = "25"
        threshold_type = "percentage"
}

tztime local {
        format = "%d/%m/%Y %H:%M:%S"
}

# load {
#         format = "%1min"
# }

disk "/" {
        format = "System storage: %avail"
}

memory {
       format = "MEM: %used / %total (%percentage_used)"
}

volume master {
        format = "♪: %volume"
        format_muted = "♪: muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

cpu_temperature 0 {
        format = "CPU Temperature: %degrees°C"
        max_threshold = "80"
        format_above_threshold = "CPU TOO HOT: %degrees°C"
}